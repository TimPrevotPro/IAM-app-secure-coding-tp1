{
  "name": "node-ts-template",
  "version": "1.0.0",
  "description": "Basic template of a node + typescript project",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "rmdir /s /q dist && tsc",
    "lint": "eslint --fix src",
    "test": "set NODE_ENV=test&& jest",
    "start:dev": "set NODE_ENV=development&& nodemon",
    "start:prod": "set NODE_ENV=production&& npm run build && node dist/index.js"
  },
  "author": "Thomas VEILLARD",
  "license": "ISC",
  "devDependencies": {
    "@jest/globals": "^29.3.1",
    "@types/node": "^15.14.9",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "class-validator": "^0.13.2",
    "eslint": "^8.2.0",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "ts-jest": "^29.0.3",
    "typescript": "4.8.4"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "pg": "^8.8.0",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.9.1",
    "typeorm": "^0.3.10"
  }
}
